<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Checkout Test Suite">
    <listeners>
        <listener class-name="listener.AllureListener"/>
    </listeners>
    <test name="Login Error">
        <classes>
            <class name="TestCaseAllure.TC01_LoginError">
                <methods>
                    <include name="TC01_LoginErrorTest"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Inventory">
        <classes>
            <class name="TestCaseAllure.TC_02LoginSuccess">
                <methods>
                    <include name="TC02_LoginSuccessTest"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>